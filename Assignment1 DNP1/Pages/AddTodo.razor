@page "/AddTodo"
@using Assignment1_DNP1.Data
@using Assignment1_DNP1.Models
@using global::Models
@using Microsoft.AspNetCore.Components
@inject IAdultdata AdultData
@inject NavigationManager NavigationManager
<h3> AddTodo </h3>
    
<EditForm Model ="@newAdultItem" OnValidSubmit="@AddNewAdult"> 
<DataAnnotationsValidator/>
<ValidationSummary/>
<div class="form-group"> User Id:<br/> 
    <InputNumber @bind-Value="newAdultItem.Id"/> </div>
<div class="form-group"> Title:<br/>
    <InputTextArea rows="4" @bind-Value="newAdultItem.LastName"/> </div>
<p class="actions">
    <button class="btn btn-outline-dark" type="submit">Create</button>
</p>
</EditForm>

@code {
    private Adult newAdultItem = new Adult();

    private void AddNewAdult()
    {
        AdultData.AddAdult(newAdultItem);
        NavigationManager.NavigateTo("/Todos");
    }

}